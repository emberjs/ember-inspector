{{#x-list
  name="route-tree"
  schema=(schema-for "route-tree")
  setIsDragging=(route-action "setIsDragging")
as |list|
}}
  {{#list.vertical-collection filtered as |content index|}}
    <tr class="list__row js-route-tree-item {{if (mod index 2) "striped"}}">
      {{route-item
        model=content
        currentRoute=currentRoute
        inspectRoute=(action "inspectRoute")
        sendRouteHandlerToConsole=(action "sendRouteHandlerToConsole")
        inspectController=(action "inspectController")
        sendControllerToConsole=(action "sendControllerToConsole")
        list=list
      }}
    </tr>
  {{/list.vertical-collection}}
{{/x-list}}
