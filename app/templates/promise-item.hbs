<div {{bind-attr style="nodeStyle" class=":list-tree__item :row expandedClass :js-promise-item"}}>
  <div class="cell_type_main cell" {{action "toggleExpand" model}} {{bind-attr style="labelStyle"}}>
    <div class="list-tree__limited list-tree__limited_helper_large">
      <span {{bind-attr title="label"}} class="js-promise-label">
        <span class="cell__arrow"></span>
        {{label}}
      </span>
    </div>
    <div class="list-tree__right-helper">
      {{#if hasStack}}
        <div class="send-trace-to-console js-trace-promise-btn" {{action "tracePromise" model}} title="Trace promise in console">
          Trace
        </div>
      {{/if}}
    </div>
  </div>
  <div class="cell cell_size_medium">
    <div class="pill pill_text_clear js-promise-state" {{bind-attr style="style"}}>{{state}}</div>
  </div>
  <div class="cell cell_size_large js-promise-value">
    {{#if hasValue}}
        <div class="list-tree__limited  list-tree__limited_helper_very-large" {{bind-attr title="settledValue.inspect"}}>
          {{#if isValueInspectable}}

            <span class="cell_clickable js-promise-object-value" {{action "inspectObject" settledValue.objectId}}>{{settledValue.inspect}}</span>
          {{else}}
            {{settledValue.inspect}}
          {{/if}}
        </div>
        <div class="list-tree__right-helper">
          {{#if isError}}
          <div class="send-trace-to-console js-send-to-console-btn" {{action "sendValueToConsole" model}} title="Send stack trace to the console">
            Stack trace
          </div>
          {{else}}
            {{send-to-console action="sendValueToConsole" param=model}}
          {{/if}}

        </div>
    {{else}}
    --
    {{/if}}
  </div>
  <div class="cell cell_size_medium cell_value_numeric js-promise-time">{{ms-to-time timeToSettle}}</div>
</div>
