<div class="toolbar">
  <button class="{{if inspectingViews 'active'}} toolbar__icon-button" {{action "toggleViewInspection"}} data-label="inspect-views">
    <svg width="16px" height="16px" viewBox="0 0 16 16" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
      <g class="svg-stroke" transform="translate(3.000000, 4.000000)" stroke="#000000" stroke-width="2" fill="none"  fill-rule="evenodd">
        <path d="M7.5,7.5 L10.5,10.5" stroke-linecap="square"></path>
        <circle cx="4" cy="4" r="4"></circle>
      </g>
    </svg>
  </button>

  <div class="divider"></div>

  <div class="toolbar__checkbox" data-label="filter-components">
    {{input type="checkbox" checked=options.components id="options-components"}} <label for="options-components">Components</label>
  </div>

  <div class="toolbar__checkbox" data-label="filter-all-views">
    {{input type="checkbox" checked=options.allViews id="options-allViews"}} <label for="options-allViews">All Views</label>
  </div>
</div>
