<div class="split split--main">
  {{#draggable-column
          width=navWidth
          classNames="split__panel split__panel--sidebar-1"}}
    <div class="split__panel__hd">
      {{render "iframes"}}
    </div>
    <div class="split__panel__bd">
      {{partial "nav"}}
    </div>
    <div class="split__panel__ft">
      <a target="_blank" href="https://github.com/emberjs/ember-inspector/issues">
        Submit an Issue
      </a>
    </div>
  {{/draggable-column}}

  <div class="split__panel">
    <div class="split__panel__hd">
      {{outlet "toolbar"}}
      {{#unless inspectorExpanded}}
        {{sidebar-toggle action="toggleInspector" side="right"
          isExpanded=false classNames="toolbar__icon-button"}}
      {{/unless}}
    </div>

    {{#view "main-content" classNames="split__panel__bd"}}
      {{outlet}}
    {{/view}}
  </div>
</div>
