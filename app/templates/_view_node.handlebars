{{#each children itemController="viewTreeItem"}}
  {{#view "treeNodeItem" nodeBinding=model}}
    <td {{bindAttr class=":table-tree__main-cell isCurrent:table-tree__main-cell_state_current" style=style }} data-label="view-name">
      {{value.name}}
    </td>
    <td {{bindAttr class="hasElement:table-tree__clickable isCurrent:table-tree__main-cell_state_current" style=style }} {{action "inspectElement"}} data-label="view-template">
      {{value.template}}
    </td>
    <td {{action "inspectModel" value.model.objectId}} {{bindAttr class="modelInspectable:table-tree__clickable"}} data-label="view-model">
      {{#if hasModel}}
        {{value.model.name}}
      {{else}}
        --
      {{/if}}
    </td>
    <td {{action "inspect" value.controller.objectId}} {{bindAttr class="hasController:table-tree__clickable"}} data-label="view-controller" >
      {{value.controller.name}}
    </td>
    <td {{action "inspectView"}} {{bindAttr class="hasView:table-tree__clickable"}} data-label="view-class">
      {{#if hasView}}
       {{value.viewClass}}
      {{else}}
        --
      {{/if}}
    </td>

  {{/view}}

  {{partial "view_node"}}
{{/each}}
