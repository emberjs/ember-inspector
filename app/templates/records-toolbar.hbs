<div class="toolbar">
  <div class="toolbar__search js-records-search">
    {{search-field value=searchValue}}
  </div>

  <div class="divider" aria-hidden="true"></div>

  <button
    class="{{if noFilterValue "active"}} toolbar__radio js-filter"
    {{action "setFilter"}}
  >
    All
  </button>

  {{#each filters as |item|}}
    {{#record-filter
      model=item
      filterValue=filterValue
    as |filter|
    }}
      <button
        class="{{if filter.checked "active"}} toolbar__radio js-filter"
        {{action "setFilter" filter.model.name}}
      >
        {{filter.model.desc}}
      </button>
    {{/record-filter}}
  {{/each}}
</div>
