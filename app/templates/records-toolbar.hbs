<div class="toolbar">
  <div class="toolbar__search js-records-search">
    {{input value=search placeholder="Search"}}
  </div>

  <button {{bind-attr class="noFilterValue:active :toolbar__radio :js-filter"}} {{action "setFilter"}}>
    All
  </button>

  <div class="divider"></div>

  {{#each filters itemController="recordFilter" as |filter|}}
    <button {{bind-attr class="filter.checked:active :toolbar__radio :js-filter"}} {{action "setFilter" filter.name}} >
      {{filter.desc}}
    </button>
  {{/each}}
</div>
