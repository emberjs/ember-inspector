<div class="list-view">
  <div class="list-view__header row">
    <div class="cell cell_type_header" data-label="column-title">Name</div>

    <!-- Account for scrollbar width :'(  -->
    <div class="cell cell_type_header spacer"></div>
  </div>

  <div class="list-view__list-container">
    {{#list-view items=filtered as |item|}}
      <div class="list-tree__item row" data-label="instance-row" {{action "inspectInstance" item}}>
        <div class="cell {{if item.inspectable 'cell_clickable'}}">
          {{item.name}}
        </div>
      </div>
    {{/list-view}}
  </div>
</div>
