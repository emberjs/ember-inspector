{{sidebar-toggle action="toggleInspector" side="right"
isExpanded=true class="toolbar__icon-button sidebar-toggle--far-left"}}
{{#if model.length}}
  <div class="split__panel__hd">
    <div class="toolbar">
      <button {{action "popStack"}} class="toolbar__icon-button {{if isNested 'enabled' 'disabled'}} js-object-inspector-back">
        {{svg-jar "arrow-back" width="21px" height="21px"}}
      </button>

      <div class="divider" aria-hidden="true"></div>

      <code class="toolbar__title js-object-name">{{model.firstObject.name}}</code>

      <button
        {{action "sendObjectToConsole" model.firstObject}}
        class="send-to-console js-send-object-to-console-btn"
        title="Send to Console">
        {{svg-jar "send-with-text" width="20px" height="10px"}}
      </button>
    </div>

    {{#if trail}}
      <code class="object-trail js-object-trail">{{trail}}</code>
    {{/if}}
  </div>
{{/if}}

<div class="split__panel__bd">
  <div class="toolbar object-inspector-toolbar">
    <button
      class="toolbar__radio toolbar__radio--first js-object-display-type-grouped {{if (eq propDisplayType 'grouped') 'active'}}"
      {{action "setPropDisplay" "grouped"}}>
      Grouped
    </button>
    <button
      class="toolbar__radio js-object-display-type-all {{if (eq propDisplayType 'all') 'active'}}"
      {{action "setPropDisplay" "all"}}>
      All
    </button>
  </div>

  {{mixin-details model=mixinDetails displayType=propDisplayType}}
</div>
