{{#if model.errors.length}}
  <ObjectInspector::Errors
    @errors={{model.errors}}
    @traceErrors={{this.traceErrors}}
  />
{{/if}}

{{#if (eq displayType "grouped")}}
  {{#each model.mixins as |mixin|}}
    {{#mixin-detail model=mixin mixinDetails=this as |detail|}}
      <div
        class="mixin {{mixin.type}} {{if detail.isExpanded "mixin_state_expanded"}} {{if mixin.properties.length "mixin_props_yes" "mixin_props_no"}} js-object-detail"
      >
        {{#if mixin.properties.length}}
          <h2
            class="mixin__name js-object-detail-name"
            {{on "click" (fn detail.toggleExpanded)}}
          >
            {{mixin.name}}
          </h2>
        {{else}}
          <h2 class="mixin__name mixin__name--no-props js-object-detail-name">
            {{mixin.name}}
          </h2>
        {{/if}}
        {{#if detail.isExpanded}}
          <ul class="mixin__properties">
            {{#each detail.sortedProperties as |prop|}}
              {{mixin-property model=prop mixin=detail}}
            {{else}}
              <li class="mixin__property">No Properties</li>
            {{/each}}
          </ul>
        {{/if}}
      </div>
    {{/mixin-detail}}
  {{/each}}
{{else}}
  <div class="mixin__properties">
    {{#mixin-detail model=this mixinDetails=this as |detail|}}
      {{#each this.sortedAllProperties as |prop|}}
        {{mixin-property model=prop mixin=detail}}
      {{/each}}
    {{/mixin-detail}}
  </div>
{{/if}}
