{{#if node.children}}
  <a
    href="#"
    class="title"
    {{action "expand"}}
  >
    <span class="expander">{{#if expanded}}-{{else}}+{{/if}}</span>
    {{unbound node.name}} <span class="duration">{{unbound node.duration}}</span>
  </a>
{{else}}
  <div class="title">
    {{unbound node.name}} <span class="duration">{{unbound node.duration}}</span>
  </div>
{{/if}}
