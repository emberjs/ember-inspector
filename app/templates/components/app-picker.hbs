<div class="dropdown">
  <select
    class="dropdown__select"
    onchange={{action "selectApp" value="target.value"}}
  >
    {{#each this.apps as |app|}}
      <option
        value={{app.applicationId}}
        selected={{eq app.applicationId this.selectedApp}}
      >
        {{app.applicationName}}
      </option>
    {{/each}}
  </select>
  {{svg-jar "dropdown-arrow" class="dropdown__arrow"}}
</div>
