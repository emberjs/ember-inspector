{{#ember-table as |t|}}
  {{t.head columns=columns sorts=sorts onUpdateSorts=(action (mut sorts))}}
  {{#t.body rows=filtered checkboxSelectionMode="none" selection=selection onSelect=(action "inspectModel") as |b|}}
    {{b.row class=(if (mod b.rowMeta.index 2) "striped")}}
  {{/t.body}}
{{/ember-table}}
