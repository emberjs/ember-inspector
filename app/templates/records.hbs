{{#x-list
  name="record-list"
  schema=schema
  setIsDragging=(route-action 'setIsDragging')
  storageKey=(concat "record-list-" modelType.name)
  itemClass="list__row_highlight" as |list|}}

  {{#list.vertical-collection filtered as |content index|}}
    <tr class="list__row js-record-list-item {{if (mod index 2) 'striped'}}" onclick={{action "inspectModel" content}}>
      {{record-item
        model=content
        modelTypeColumns=columns
        list=list
      }}
    </tr>
  {{/list.vertical-collection}}
{{/x-list}}
