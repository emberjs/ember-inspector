<List
  class="js-view-tree"
  @schema={{schema-for "view-tree"}}
  @setIsDragging={{action "setIsDragging" target=this.application}} as |list|
>
  {{#list.vertical-collection filteredList as |content index|}}
    <tr
      class="list__row js-view-tree-item {{if (mod index 2) "striped"}}"
      onmouseenter={{action "previewLayer" content}}
      onmouseleave={{action "hidePreview"}}
    >
      {{view-item
        model=content
        inspect=(action "inspect")
        inspectElement=(action "inspectElement")
        sendModelToConsole=(action "sendModelToConsole")
        sendObjectToConsole=(action "sendObjectToConsole")
        list=list
      }}
    </tr>
  {{/list.vertical-collection}}
</List>
