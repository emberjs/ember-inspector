<div class="error-page js-error-page">
  <div class="error-page__content">
    <div class="error-page__header">
      <div class="error-page__title js-error-page-title">
        {{description}}
      </div>
      <img class="tomster" src="assets/images/fishy_tomster.png" alt="Fishy Tomster">
    </div>

    <div class="error-page__reasons">
      <div class="error-page__reasons-title">
        {{#if reasonsTitle}}
          {{reasonsTitle}}
        {{else}}
          Here are some common reasons this happens:
        {{/if}}
      </div>

      <ul class="error-page__list">
        {{yield}}
      </ul>
    </div>

    <div class="error-page__footer">
      If you're still having trouble, please file an issue on the Ember Inspector's
      <a href="https://github.com/emberjs/ember-inspector/issues" target="_blank">GitHub page.</a>
    </div>
  </div>
</div>
