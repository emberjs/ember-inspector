<div class={{concat "toolbar__search " @wrapperClass}}>
  <Input
    @id={{this.inputId}}
    @type="text"
    @value={{@value}}
    placeholder="Search"
  />

  {{#if @value}}
    <button
      class="toolbar__icon-button toolbar__search-clear-button js-search-field-clear-button"
      title="clear"
      {{on "click" this.clear}}
    >
      {{svg-jar "clear" width="14px" height="14px"}}
    </button>
  {{/if}}
</div>

