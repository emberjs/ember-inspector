{
  "manifest_version": 2,

  "name": "Ember.js Inspector",
  "description": "This extension adds a pane to the developer tools pane",
  "version": "1.0",

  "permissions": [
    "experimental",
    "http://*/*",
    "file://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "devtools_page": "devtools.html",
  "content_scripts": [{
    "matches": ["http://*/*", "file://*/*"],
    "js": ["content-script.js"]
  }],
  "background": {
    "scripts": ["background-script.js"]
  }
}
